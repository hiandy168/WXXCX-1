/* pages/course/course.wxss */
page{
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
}
.course{
    display: flex;
    flex-direction: column;
    font-family:"微软雅黑";
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: rgba(217,217,217,0.3);
}
/*left*/
.main{
    flex:1;
    width: 100%;
    display: flex;
    padding-top: 37px;
}
.courses-left{
    flex: 1;
    overflow: hidden
}
.courses-left view{
    width:100%;
    display: block;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #777;
    padding-left: 8rpx;
    text-align: center;
}
.courses-left text{
    width: 100%;
    display: block;
}
.courses-left .active{
    background:url("../../images/section_title_tip.png") left no-repeat;
    background-size: 8rpx 80rpx;
}
.active text{
    background: #fff;
}
/*right*/
.courses-right{
    flex: 3;
    background: #fff;
    overflow: hidden
}
.courses-right scroll-view{
    width: 100%;
    height: 100%;
    padding: 0 40rpx;
}

.courses-right .catalog{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    padding-top: 40rpx;
}

.courses-right .listing text{
    display: inline-block;
    padding-right: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #999;
}







